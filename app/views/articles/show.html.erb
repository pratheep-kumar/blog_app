<h1> Showing selected articles </h1>

<p>The title of the article is : <%= @article.title %> </p>

<div align="center">
<ul class="listing">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <li>
        <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
      </li>
      <li class="article-title">
        <%= link_to @article.user.username, user_path(@article.user) %>
      </li>
      <li>
        <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
      </li>
    </div>
  </div>
</ul>
</div>

<p>The description of the article is : <%= @article.desription %> </p>
<p><%= link_to 'Edit the above article', edit_article_path(@article) %></p>
<%= link_to 'Back to Articles List', articles_path %>
