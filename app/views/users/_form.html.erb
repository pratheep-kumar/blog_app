<% if @user.errors.any? %>
<h2>The following errors are happened in the system </h2>
<ul>
   <% @user.errors.full_messages.each do |msg| %>
   <li> <%= msg %> </li>
   <% end %>
</ul>

<% end %>

<%= form_for @user do |f| %>
<p>
	<%= f.label :Username %><br/>
	<%= f.text_field :username%>
</p>
<p>
	<%= f.label :email%> <br/>
	<%= f.email_field :email%>
</p>
<p>
	<%= f.label :password%> <br/>
	<%= f.password_field :password%>
</p>
<p>
	<%= f.submit (@user.new_record? ? "Sign up" : "Update account") %>
</p>
<% end %>
<%= link_to 'Back to Articles List', articles_path %>
